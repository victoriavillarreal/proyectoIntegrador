<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header y HeaderLogueado-->
	<% if(locals.user) { %>
		<%- include('./partials/HeaderLogueado') %> 

	<% } else { %>
		<%- include('./partials/header') %> 
	<% } %>
	
	<!-- /Header y HeaderLogueado -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/userIcon.png" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= locals.user.nombre_y_apellido %>  
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4 link" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= usuario.products.length %> 
							<% if(usuario.products.length === 1){ %>
								producto
							<% } else{ %> 
								productos
							<% } %> 
						</li>
						<li>173 seguidores</li>
						<li><%= usuario.comments.length %>
							<% if(usuario.comments.length === 1){ %>
								comentario
							<% } else{ %> 
								comentarios
							<% } %> 
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < usuario.products.length; i++){ %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= usuario.products[i].id %> ">
						<figure class="product-box_image">
							<img src="/images/products/<%= usuario.products[i].imagen %> " alt="auriculares">
						</figure>
						<article class="product-box_data">
							<h2><%= usuario.products[i].nombre %> </h2>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
		</div>
	</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>