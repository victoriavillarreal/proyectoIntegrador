<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header y HeaderLogueado-->
	<% if(locals.user) { %>
		<%- include('./partials/HeaderLogueado') %> 

	<% } else { %>
		<%- include('./partials/header') %> 
	<% } %>
	
	<!-- /Header y HeaderLogueado -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12 color-fondo">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			

			<% for (let i = 0; i < products.length; i++) { %>
					
				<div class="col-12 col-sm-6 col-lg-3">	
					<section class="product-box">
						<a href="/products/detail/<%= products[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= products[i].imagen %>">
							</figure>
							<article class="product-box_data">
								<h2><%= products[i].nombre %> </h2>
								<p> Cargado por: <%= products[i].user.nombre_y_apellido %> </p>
								<p><%= products[i].descripcion %> </p>
								<p>Comentarios: <%= products[i].comments.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 
			
			
		</div>
	</div>
			
			

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>