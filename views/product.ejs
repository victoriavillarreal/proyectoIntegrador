<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header y HeaderLogueado-->
	<% if(locals.user) { %>
		<%- include('./partials/HeaderLogueado') %> 

	<% } else { %>
		<%- include('./partials/header') %> 
	<% } %>
	
	<!-- /Header y HeaderLogueado -->
	
	<!-- product detail -->
			
			<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= product.nombre %> </h2> 
			<p class="product-detail-description">
				<a class="editar link" href="/products/product-add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= product.imagen %> " alt="" class="product-detail-img">
					<h2>Precio: $<%= product.precio %></h2>
					<p class="product-detail-description">Descripci√≥n del producto: <%= product.descripcion %> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<% for(let i=0; i< product.comments.length; i++){ %>
							<img src="/images/users/userIcon.png" alt="userIcon">
							<div class="data">
								<p class="user">
								<strong> <a class= "editar link" href="/users/profile"> <%= product.comments[i].usuario.nombre_y_apellido %> </a> </strong>
								<%= product.comments[i].comentario%></p>
							</div>
							<% } %>
						</article>
					</section>
					<% if(locals.user){ %>
					<form class="form" action="/products/comentar" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario" name="comentario">
						<input type="hidden" name="usuario_id" value="<%= product.user_id %>">
						<input type="hidden" name="producto_id" value="<%= product.id %>">
						<button type="submit" class="buy-now-button link">AGREGAR COMENTARIO</button>
					</form>
					<hr>
					<% } %>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>