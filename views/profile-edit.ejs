<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header y HeaderLogueado-->

	<%- include('./partials/HeaderLogueado') %> 

	
	<!-- /Header y HeaderLogueado -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form class="formulario perfil" action='/users/profile-update' method="POST">
					<p>
						<label class= "campo perfil" for="nombre-apellido">Nombre y apellido:</label>
						<input class= "ingresar" type="text" name="nombreApellido" id="nombreApellido">
					</p>
					<p>
						<label class= "campo perfil" for="fecha-de-nacimiento">Fecha de nacimiento:</label>
						<input class= "ingresar" type="date" name="fechaDeNacimiento" id="fechaDeNacimiento">
					</p>
					<p>
						<label class= "campo perfil" for="usuario">Usuario:</label>
						<input class= "ingresar" type="text" name="usuario" id="usuario">
					</p>
					<p>
						<label class= "campo perfil" for="email">Email:</label>
						<input class= "ingresar" type="text" name="email" id="email">
					</p>
					<p>
						<label class= "campo perfil" for="contrasenia">Contrase√±a:</label>
						<input class= "ingresar" type="password" name="contrasenia" id="contrasenia">
					</p>
					<p class="boton-enviar"> 
						<input class="link enviar" type="submit" value="Enviar">
					</p>
				</form>
			</h2>
		</div>
	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>