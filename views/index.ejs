<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12 color-fondo">
				<h2 class="products-title">NOVEDADES</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<% for (let i = 0; i < productDescription.length; i++) { %>
				<% const product = productDescription[i]; %>	
				<% if (product.categoría == 'novedad') { %> 
					<div class="col-12 col-sm-6 col-lg-3">	
						<section class="product-box">
							<a href="/products/detail/<%= product.id %> ">
								<figure class="product-box_image">
									<img src="<%= product.imagen %>">
								</figure>
								<article class="product-box_data">
									<h2><%= product.nombre %> </h2>
									<p><%= product.descripción %> </p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			
			<% } %> 
			
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12 color-fondo">
				<h2 class="products-title">MÁS COMENTADOS</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for (let i = 0; i < productDescription.length; i++) { %>
				<% const product = productDescription[i]; %>
				
				<% if(product.categoría == 'comentado') { %> 
					<div class="col-12 col-sm-6 col-lg-3">	
						<section class="product-box">
							<a href="/products/detail/<%= product.id %>">
								<figure class="product-box_image">
									<img src="<%= product.imagen %>">
								</figure>
								<article class="product-box_data">
									<h2><%= product.nombre %> </h2>
									<p><%= product.descripción %> </p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			
			<% } %>
			
			
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>	
</html>